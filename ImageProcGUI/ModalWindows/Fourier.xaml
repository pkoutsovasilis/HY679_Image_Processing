<Window x:Class="ImageProcGUI.ModalWindows.Fourier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fourier" Height="220" Width="350" ResizeMode="NoResize">
    <Grid Background="#d6dbe9">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <GroupBox Header="Forward Fourier" Margin="10" Padding="10">
                <StackPanel Orientation="Vertical">
                    <Button Content="Magnitude" Margin="10" Width="100" Click="Button_Click"/>
                    <Button Content="Phase" Margin="10" Width="100" Click="Button_Click_1"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Inverse Fourier" Margin="10" Padding="10" IsEnabled="False">
                <StackPanel Orientation="Vertical">
                    <Button Content="Magnitude" Margin="10" Width="100"/>
                    <Button Content="Phase" Margin="10" Width="100"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="Ok"  Width="75" Margin="0,0,10,0" Click="Button_Click_2"/>
            <Button Content="Cancel"  Width="75" Click="Button_Click_3"/>
        </StackPanel>
    </Grid>
</Window>
